<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<record model="ir.ui.view" id="qc_test_tree_view_inh_qualitycontrolext">
			<field name="name">qc.test.tree.view.inh.qualitycontrolext</field>
			<field name="model">qc.test</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="nan_quality_control.qc_test_tree_view" />
			<field name="arch" type="xml">
				<field name="test_template_id" position="after" >
					<field name="origin" />
					<field name="stock_move_id" />
					<field name="categ_id" />
					<field name="product_id" />
					<field name="picking_id" />
					<field name="production_id" />
				</field>
			</field>
		</record>
		
		<!-- *********************** VISTA SEARCH ****************** -->

		<record model="ir.ui.view" id="qc_test_search_view_qualitycontrolext">
			<field name="name">qc.test.search.view.qualitycontrolext</field>
			<field name="model">qc.test</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
                <search string="Search Test">
                    <group>
						<field name="name" />
						<field name="origin" />
						<field name="object_id" />
						<field name="test_template_id" />
						<field name="state" />
						<field name="success" />
						<field name="enabled" />
						<newline/>
						<field name="categ_id" />
						<field name="product_id" />
						<field name="picking_id" />
						<field name="production_id" />
                    </group>
                    <newline/>
                    <group expand="0" string="Group By...">
						<filter string="Reference" domain="[]" context="{'group_by':'object_id'}" />
						<filter string="Template" domain="[]" context="{'group_by':'test_template_id'}" />
						<filter string="State" domain="[]" context="{'group_by':'state'}" />
						<filter string="Success" domain="[]" context="{'group_by':'success'}" />
						<filter string="Enabled" domain="[]" context="{'group_by':'enabled'}" />
						<filter string="Category" domain="[]" context="{'group_by':'categ_id'}" />	
						<filter string="Product" domain="[]" context="{'group_by':'product_id'}" />
						<filter string="Picking" domain="[]" context="{'group_by':'picking_id'}" />
						<filter string="Production" domain="[]" context="{'group_by':'production_id'}" />
                   </group>
                 </search>				
			</field>
		</record>
		

		<record model="ir.ui.view" id="qc_test_form_view_inh_qualitycontrolext">
			<field name="name">qc.test.form.view.inh.qualitycontrolext</field>
			<field name="model">qc.test</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="nan_quality_control.qc_test_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//button[@string='Select Template']" position="after" >
					<field name="categ_id" colspan="7" invisible="1" />
					<field name="origin" colspan="3" />
					<field name="stock_move_id" colspan="4" />
					<field name="product_id" colspan="2" on_change="onchange_product(product_id)" />
					<field name="picking_id" colspan="2" />
					<field name="production_id" colspan="3" />
					<button name="button_create_test_lines" string="Create Test Lines" type="object" colspan="7" />
				</xpath>
			</field>
		</record>


	</data>
</openerp>