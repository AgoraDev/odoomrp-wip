<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="stock_picking_quality_control_view">
            <field name="name">stock.picking.quality.control.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Additional Info']" position="after">
                    <page string="Quality Tests">
                        <group colspan="4" col="8">
                            <field name="created_tests" colspan="2" />
                            <field name="done_tests" colspan="2" />
                            <field name="passed_tests" colspan="2" />
                            <field name="failed_tests" colspan="2" />
                            <field name="qc_test_ids" nolabel="1"
                                colspan="8" height="300" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>