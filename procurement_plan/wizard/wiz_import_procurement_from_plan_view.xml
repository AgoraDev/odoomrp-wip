<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wiz_import_procurement_from_plan_view">
            <field name="name">wiz.import.procurement.from.plan.view</field>
            <field name="model">wiz.import.procurement.from.plan</field>
            <field name="arch" type="xml">
                <form string="Import procurements">
                    <group string="Import Procurements">
                        <label string="You are going to import procurements. Are you sure you want to proceed?" class="oe_inline" />
                    </group>
                    <group colspan="4" >
                        <field name="procurements" nolabel="1" >
                            <tree string="Procurements" editable="bottom">
                                <field name="procurement_id" invisible="1"/>
                                <field name="selected" />
                                <field name="name" readonly="1" />
                                <field name="date_planned" readonly="1" />
                                <field name="location_id" readonly="1" />
                                <field name="origin" readonly="1" />
                                <field name="product_id" readonly="1" />
                                <field name="product_qty" readonly="1" />
                                <field name="product_uom" readonly="1" />
                                <field name="state" readonly="1" />
                                <field name="rule_id" readonly="1" />
                                <field name="purchase_id" readonly="1" />
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="import_procurements" type="object" 
                                string="Import" class="oe_highlight" />
                        or
                        <button name="select_all" type="object" 
                                string="Select all" class="oe_highlight"/>
                        or
                        <button name="unselect_all" type="object" 
                                string="Unselect all" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                                special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_import_procurement_plan">
            <field name="name">Wizar import procurements from plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wiz.import.procurement.from.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wiz_import_procurement_from_plan_view"/>
        </record>
    </data>
</openerp>
