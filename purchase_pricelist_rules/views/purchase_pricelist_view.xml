<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Pricelist Item - product.pricelist.item -->
        <record id="purchase_pricelist_items_action" model="ir.actions.act_window">
            <field name="name">Pricelist Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.pricelist.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {'search_default_pricelist_type_id':1}
            </field>
        </record>

        <record id="purchase_pricelist_items_action_form_view" model="ir.actions.act_window.view">
            <field name="act_window_id"
                ref="purchase_pricelist_items_action" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_pricelist_rules.pricelist_item_form_view_ext2" />
            <field name="sequence" eval="15" />
        </record>

        <record id="purchase_pricelist_items_action_tree_view" model="ir.actions.act_window.view">
            <field name="act_window_id"
                ref="purchase_pricelist_items_action" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="product_pricelist_rules.pricelist_item_tree_view_ext2" />
            <field name="sequence" eval="5" />
        </record>

        <menuitem id="purchase_pricelist_items_mi" action="purchase_pricelist_items_action" name="Pricelist Items"
            sequence="5" parent="purchase.menu_purchase_config_pricelist" groups="product.group_purchase_pricelist" />

        <!-- Pricelist Item Offers - product.pricelist.item.offer -->
        <record id="purchase_pricelist_item_offers_action" model="ir.actions.act_window">
            <field name="name">Pricelist Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.pricelist.item.offer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="purchase_pricelist_item_offers_mi" action="purchase_pricelist_item_offers_action" name="Pricelist Item Offers"
            sequence="6" parent="purchase.menu_purchase_config_pricelist" groups="product.group_purchase_pricelist" />

    </data>
</openerp>
