<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sale_order_third_discount_view_ext">
            <field name="name">sale.order.third.discount.ext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_pricelist_rules.sale_order_form_view_ext" />
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//field[@name='order_line']/form//div[@name='discount2']"
                        position="after">
                        <label for="discount3"
                            groups="sale_third_discount.group_third_discount"/>
                        <div name="discount3" groups="sale_third_discount.group_third_discount">
                            <field name="discount3" class="oe_inline" />
                            %
                        </div>
                    </xpath>
                    <xpath
                        expr="//field[@name='order_line']/tree//field[@name='discount2']"
                        position="after">
                        <field name="discount3"
                            groups="sale_third_discount.group_third_discount"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_third_discount_form_view">
            <field name="name">sale.order.third.discount.line.form</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale_pricelist_rules.sale_order_line_form_view" />
            <field name="arch" type="xml">
                <field name="discount2" position="after">
                    <field name="discount3"
                         groups="sale_third_discount.group_third_discount" />
                </field>
            </field>
        </record>

    </data>
</openerp>
