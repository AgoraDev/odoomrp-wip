<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view"
            id="mrp_production_form_view_inh_qualitycontrolext">
            <field name="name">mrp.production.form.view.inh.qualitycontrolext
            </field>
            <field name="model">mrp.production</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Extra Information']"
                    position="after">
                    <page string="Quality Tests">
                        <group colspan="4" col="8">
                            <field name="created_tests" colspan="2" />
                            <field name="done_tests" colspan="2" />
                            <field name="passed_tests" colspan="2" />
                            <field name="failed_tests" colspan="2" />
                        </group>
                        <field colspan="4" name="qc_test_ids"
                            nolabel="1" />
                    </page>
                </xpath>
            </field>
        </record>

        <!-- ATAJO A TEST DESDE PRODUCTOS -->
        <act_window
            context="{'search_default_product_id':[active_id], 'default_product_id':active_id}"
            domain="[('product_id','=',active_id)]" id="act_product_qc_test_opened"
            name="Test" res_model="qc.test" src_model="product.product"
            view_type="form" view_mode="tree,form" />

    </data>
</openerp>