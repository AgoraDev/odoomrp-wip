<openerp>
    <data>

    <record model="ir.ui.view" id="mrp_production_quant_shortcut_form_view">
        <field name="name">project.shortcuts.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <div name="buttons" position="inside">
                <button class="oe_inline oe_stat_button"
                        type="action"
                        name="%(sale_mrp_project.act_project_2_procurement_all)d"
                        icon="fa-list">
                        <field string="Procurements" name="procurement_count"
                            widget="statinfo" />
                </button>
                <button class="oe_inline oe_stat_button"
                        type="action"
                        name="%(sale_mrp_project.act_project_2_sale_all)d"
                        icon="fa-list">
                        <field string="Sales" name="sale_count"
                            widget="statinfo" />
                </button>
                <button class="oe_inline oe_stat_button"
                        type="action"
                        name="%(sale_mrp_project.act_project_2_purchase_all)d"
                        icon="fa-list">
                        <field string="Purchases" name="purchase_count"
                            widget="statinfo" />
                </button>
                <button class="oe_inline oe_stat_button"
                        type="action"
                        name="%(sale_mrp_project.act_project_2_production_all)d"
                        icon="fa-list">
                        <field string="Manufacturing" name="production_count"
                            widget="statinfo" />
                </button>
            </div>
        </field>
    </record>

    </data>
</openerp>