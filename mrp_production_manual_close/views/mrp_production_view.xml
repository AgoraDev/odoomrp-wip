<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_mrp_production_form_close" model="ir.ui.view">
        <field name="name">mrp.production.form.close</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <data>
                <field name="name" position="after">
                    <field name="production_done" invisible="1" />
                </field>
                <button name="button_produce" position="after">
                     <button name="button_produce_close" string="Close Production" class="oe_highlight" attrs="{'invisible':['|',('production_done','=', False),('state', '=', 'done')]}"/>
                </button>
                <button name="%(mrp.act_mrp_product_produce)d" position="replace">
                    <button name="%(mrp.act_mrp_product_produce)d" states="" string="Produce" type="action" class="oe_highlight"
                    attrs="{'invisible':['|',('production_done', '=', True),('state', 'not in', ('ready','in_production'))]}"/>
                </button>
            </data>
        </field>
        </record>
    </data>
</openerp>
