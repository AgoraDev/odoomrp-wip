<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_order_form_inh_promotiongift" model="ir.ui.view">
            <field name="name">view.order.form.inh.promotiongift</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <page string="Other Information" position="after">
                   <page string="Gift products">
                        <separator string="Gift products" colspan="4" />
                        <field name="gift_products" nolabel="1">
                            <field name="product" />
                            <field name="category" />
                            <field name="quantity" />
                        </field>
                        <button name="button_dump_final_gift_products" class="oe_highlight"
                            string="Dump offer" type="object" colspan="4" />
                        <separator string="Final gift products" colspan="4" />
                        <field name="final_gift_products" />
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
